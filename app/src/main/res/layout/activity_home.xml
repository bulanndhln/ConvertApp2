<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blur"
    tools:context=".home">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="0dp"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/poppinbold"
        android:text="Convertify"
        android:textColor="@color/greensage"
        android:textSize="34dp"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="false"
        android:layout_centerHorizontal="false"
        android:layout_marginStart="0dp"
        android:layout_marginTop="130dp"
        android:fontFamily="@font/made"
        android:text="Choose Your Conversion!"
        android:textAlignment="center"
        android:textColor="@color/greensage"
        android:textSize="24dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="-2dp"
        android:layout_marginTop="190dp"
        android:layout_marginEnd="0dp"
        android:fontFamily="@font/made"
        android:text="Distance"
        android:textAlignment="center"
        android:textColor="@color/greensage"
        android:textSize="18dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="false"
        android:layout_alignParentEnd="false"
        android:layout_centerHorizontal="false"
        android:layout_marginStart="219dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="502dp"
        android:layout_marginEnd="0dp"
        android:fontFamily="@font/made"
        android:text="Temperature"
        android:textColor="@color/greensage"
        android:textSize="18dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="false"
        android:layout_alignParentEnd="false"
        android:layout_centerHorizontal="false"
        android:layout_marginStart="105dp"
        android:layout_marginTop="502dp"
        android:layout_marginEnd="0dp"
        android:fontFamily="@font/made"
        android:text="Money"
        android:textAlignment="gravity"
        android:textColor="@color/greensage"
        android:textSize="18dp"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/jarak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="216dp"
        android:background="@drawable/distance"></ImageButton>

    <ImageButton
        android:id="@+id/uang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="56dp"
        android:layout_marginTop="360dp"
        android:background="@drawable/money" />

    <ImageButton
        android:id="@+id/suhuu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="360dp"
        android:layout_marginEnd="56dp"
        android:background="@drawable/temperature" />

</RelativeLayout>